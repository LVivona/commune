


- name: Transfer and execute a script.
  hosts: all
  tasks:

  - name: Copy file with owner and permissions
    ansible.builtin.copy:
      src: "{{ lookup('env','HOME') }}/commune/ansible"
      dest: /tmp
      owner: paperspace
      group: paperspace
      mode: '0644'


  - name: making ansible scripts executable
    ansible.builtin.shell: sudo docker exec -it commune bash -c "chmod +x /tmp/ansible/scripts"
    args:
      chdir: commune/
    register: chmod_scripts

  - name: generating hotkeys
    ansible.builtin.shell: sudo docker exec -it commune bash -c ". /tmp/ansible/scripts/btcli_regen_hotkeys.sh /tmp"
    args:
      chdir: commune/
    register: shell

  - debug: msg="{{ shell.stdout }}"
  - debug: msg="{{ shell.stderr }}"